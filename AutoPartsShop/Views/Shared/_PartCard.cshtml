@model Part

<div class="col-sm-4 col-lg-4 col-md-4 ">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for shop." />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Part" asp-action="Details" asp-route-id="@Model.PartId">@Model.Name</a>
            </h3>
            <h3>@Model.Brand</h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>